<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/desktop_sidebar_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15"
    android:paddingTop="@dimen/dp_10"
    android:paddingBottom="@dimen/dp_10"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants">
    <!-- sidebar item icon -->
    <ImageView 
        android:id="@+id/desktop_sidebar_item_imgv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/str_null_txt"
        android:src="@drawable/hughie_screen_desktop_sidebar_game_selector"
        />
    <!-- sidebar item name -->
    <TextView 
        android:id="@+id/desktop_sidebar_item_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:layout_gravity="center_vertical"
        android:textColor="@color/color_FFFFFFFF"
        android:textSize="@dimen/sp_16"
        android:text="@string/str_screen_tab_game_txt"
        />
</LinearLayout>
    
