<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/game_fail_popupwindow"
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:gravity="center" 
    android:background="@drawable/imgv_game_black_background">
    <!-- image popup label -->
    <ImageView 
        android:id="@+id/imgv_fail_popup_label"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:background="@drawable/imgv_game_main_lose_label"
        />
    <!-- image popup anim -->
    <ImageView 
        android:id="@+id/imgv_fail_popup_anim"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:background="@drawable/imgv_game_main_lose_anim1"
        />
    <!-- image popup star -->
    <LinearLayout 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center" 
        android:layout_gravity="center">
        <!-- image star1 -->
        <ImageView 
            android:id="@+id/imgv_fail_popup_star1"
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
            android:background="@drawable/imgv_game_main_star_unchecked"
            />
        <!-- image star2 -->
        <ImageView 
            android:id="@+id/imgv_fail_popup_star2"
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
            android:background="@drawable/imgv_game_main_star_unchecked"
            />
        <!-- image star3 -->
        <ImageView 
            android:id="@+id/imgv_fail_popup_star3"
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
            android:background="@drawable/imgv_game_main_star_unchecked"
            />
    </LinearLayout>
    <!-- image popup button -->
    <LinearLayout 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:orientation="horizontal"
        android:gravity="center" 
        android:layout_gravity="center">
        <!-- popup button replay -->
        <Button 
            android:id="@+id/btn_fail_popup_replay"
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
            android:background="@drawable/hughie_btn_game_main_replay_selector"
            />
        <!-- popup button next -->
        <Button 
            android:id="@+id/btn_fail_popup_menu"
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
            android:layout_marginLeft="20.0dip"
            android:background="@drawable/hughie_btn_game_main_menu_selector" 
            />
    </LinearLayout>
</LinearLayout>