<?xml version="1.0" encoding="UTF-8"?>
<!-- created by hughiezhang 20151008 17:17 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_background">
    
    <!-- title header -->
    <include layout="@layout/layout_hughie_head" />
    
    <!-- game welcome布局 -->
    <RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="@drawable/imgv_game_welcome_background">
    	<!-- game welcome 下方布局 -->
    	<RelativeLayout 
    	    android:layout_width="match_parent"
    	    android:layout_height="match_parent">
    	    <!-- 故事模式按钮 -->
    	    <Button 
    	        android:id="@+id/game_welcome_story_btn"
    	        android:layout_width="wrap_content"
    	        android:layout_height="wrap_content"
    	        android:layout_centerInParent="true"
    	        android:layout_alignParentBottom="true"
    	        android:layout_marginBottom="@dimen/dp_70"
    	        android:background="@drawable/hughie_btn_game_welcome_story_selector"
    	        />
    	    <!-- 主题按钮 -->
    	    <Button 
    	        android:id="@+id/game_welcome_theme_btn"
    	        android:layout_width="wrap_content"
    	        android:layout_height="wrap_content"
    	        android:layout_alignParentLeft="true"
    	        android:layout_alignParentBottom="true"
    	        android:background="@drawable/hughie_btn_game_welcome_theme_selector"
    	        />
    	    <!-- 食物按钮 -->
    	    <Button 
    	        android:id="@+id/game_welcome_food_btn"
    	        android:layout_width="wrap_content"
    	        android:layout_height="wrap_content"
    	        android:layout_above="@+id/game_welcome_theme_btn"
    	        android:background="@drawable/hughie_btn_game_welcome_food_selector"
    	        />
    	    <!-- 动物按钮 -->
    	    <Button 
    	        android:id="@+id/game_welcome_animal_btn"
    	        android:layout_width="wrap_content"
    	        android:layout_height="wrap_content"
    	        android:layout_alignParentBottom="true"
    	        android:layout_marginLeft="@dimen/dp_70"
    	        android:background="@drawable/hughie_btn_game_welcome_animal_selector"
    	        />
    	    <!-- 水果按钮 -->
    	    <Button 
    	        android:id="@+id/game_welcome_fruit_btn"
    	        android:layout_width="wrap_content"
    	        android:layout_height="wrap_content"
    	        android:layout_alignParentBottom="true"
    	        android:layout_marginLeft="@dimen/dp_43"
    	        android:layout_marginBottom="@dimen/dp_37"
    	        android:background="@drawable/hughie_btn_game_welcome_fruit_selector"
    	        />
    	    <!-- 评价按钮 -->
    	    <Button 
    	        android:id="@+id/game_welcome_ranking_btn"
    	        android:layout_width="wrap_content"
    	        android:layout_height="wrap_content"
    	        android:layout_alignParentRight="true"
    	        android:layout_alignParentBottom="true"
    	        android:background="@drawable/hughie_btn_game_welcome_ranking_selector"
    	        />
    	</RelativeLayout>
    	<!-- chicken图片 -->
    	<ImageView 
    	    android:id="@+id/game_welcome_chicken_imgv"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_alignParentLeft="true"
    	    android:layout_alignParentTop="true"
    	    android:layout_marginLeft="@dimen/dp_25"
    	    android:layout_marginTop="@dimen/dp_85"
    	    android:contentDescription="@string/text"
    	    android:scaleType="centerCrop"
    	    android:src="@drawable/imgv_game_welcome_chicken"
    	    />
    	<!-- wolf图片 -->
    	<ImageView 
    	    android:id="@+id/game_welcome_wolf_imgv"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_alignParentRight="true"
    	    android:contentDescription="@string/text"
    	    android:scaleType="centerCrop"
    	    android:src="@drawable/imgv_game_welcome_wolf"
    	    />
    	<!-- logo图片 -->
    	<ImageView 
    	    android:id="@+id/game_welcome_logo_imgv"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_centerHorizontal="true"
    	    android:layout_marginTop="@dimen/dp_130"
    	    android:contentDescription="@string/text"
    	    android:scaleType="centerCrop"
    	    android:src="@drawable/hughie_btn_game_welcome_logo_selector"
    	    />
    	<!-- more按钮 -->
    	<Button 
    	    android:id="@+id/game_welcome_more_btn"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_alignParentLeft="true"
    	    android:layout_marginLeft="@dimen/dp_15"
    	    android:layout_marginTop="@dimen/dp_35"
    	    android:background="@drawable/hughie_btn_game_welcome_more_selector"
    	    />
	</RelativeLayout>
</LinearLayout>