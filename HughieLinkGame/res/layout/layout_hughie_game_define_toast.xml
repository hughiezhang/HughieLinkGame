<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="@dimen/dp_200"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <!-- game toast title -->
    <TextView 
        android:id="@+id/game_toast_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:padding="@dimen/dp_02"
        android:textColor="@color/black"
  		android:textSize="@dimen/sp_16"
  		android:textStyle="bold"
        />
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_02"
        android:layout_marginBottom="@dimen/dp_05"
        android:layout_marginLeft="@dimen/dp_08"
        android:layout_marginRight="@dimen/dp_08"
        android:orientation="horizontal">
        <!-- toast display imageview -->
        <ImageView 
            android:id="@+id/game_toast_display_imgv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/dp_10"
            />
        <!-- toast content textview -->
        <TextView 
            android:id="@+id/game_toast_content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_02"
            android:paddingRight="@dimen/dp_05"
            android:paddingBottom="@dimen/dp_02"
            android:textColor="@color/color_black"
            android:textSize="@dimen/sp_14"
            />
    </LinearLayout>
</LinearLayout>
    