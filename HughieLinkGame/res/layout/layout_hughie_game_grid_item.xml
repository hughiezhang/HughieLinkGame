<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/game_grid_item_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F9F9F9">
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView 
            android:id="@+id/game_grid_item_icon_imgv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/text"
            />
        <TextView 
            android:id="@+id/game_grid_item_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_05"
            android:textColor="@color/color_9D55B8"
            android:textSize="@dimen/sp_14"
            android:text="@string/str_game_grid_item_more_txt"
            />
    </LinearLayout>
    <ImageButton 
        android:id="@+id/game_grid_item_delete_imgb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_05"
        android:layout_marginTop="@dimen/dp_05"
        android:background="@drawable/imgv_game_grid_item_delete"
        android:contentDescription="@string/text"
        />
</RelativeLayout>